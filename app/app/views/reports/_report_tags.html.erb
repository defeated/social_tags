<div class="overflow-hidden bg-white shadow sm:rounded-lg my-4">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">
      <%= title %>
      (<%= report_tags.size %>)
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= description %>
    </p>
  </div>

  <div class="border-t border-gray-200">
    <dl>

      <% if report_tags.empty? %>
        <div class="<%= cycle("bg-gray-50", "bg-white") %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">n/a</dt>
        </div>
      <% end %>

      <% report_tags.each do |(key, value)| %>
        <div class="<%= cycle("bg-gray-50", "bg-white") %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">
            <%= key %>
          </dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= value %>
          </dd>
        </div>
      <% end %>

    </dl>
  </div>
</div>
